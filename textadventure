# Print en beskrivelse af current_room
def look(current_room):
    if current_room == 1:
        describe_room_1()
    elif current_room == 2:
        describe_room_2()
    elif current_room == 3:
        describe_room_3()
    elif current_room == 4:
        describe_room_4()
    elif current_room == 5:
        describe_room_5()
    elif current_room == 6:
        describe_room_6()
    elif current_room == 7:
        describe_room_7()
    else:
        print("Der er sket en fejl.")

# Hold styr på hvilket rum spilleren er i
current_room = 1

# Print beskrivelse når spillet starter
#look(current_room)

while True:
    command = input("> ")           # Bruger indtaster kommando
    if command == "look":
        look(current_room)          # Brug current_room variabel til at
                                    # printe beskrivelse af rummet
    elif command == "quit":
        break
    else:
        print("Det forstår jeg ikke. Prøv igen!")
